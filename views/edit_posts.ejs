<%- include("./layout/header") %>

<div class="container">
    <div class="row">
       <div class="col-lg-6 mx-auto mt-4">
           <div class="card shadow">
               <div class="card-header bg-success">
                   <h3 class="text-light">Edit Post (<%= post.PostTopic %>)</h3>
               </div>
               <div class="card-body p-4">
                   <form action="/update/<%= post._id %>" method="post" id="add-form" enctype="multipart/form-data">
                       <div class="mb-3">
                           <label for="PostTopic">Post Topic</label>
                           <input type="text" name="PostTopic" class="form-control form-control-lg" placeholder="Enter Post Topic" value="<%= post.PostTopic %>" />
                       </div>
                       <div class="mb-3">
                        <label for="Postdescription">Post Description</label>
                        <input type="text" name="Postdescription" class="form-control form-control-lg" placeholder="Enter Post Description" value="<%= post.Postdescription %>" />
                    </div>                    
                    <div class="mb-3">
                        <label for="image" class="form-label">Select Image</label>
                        <input class="form-control form-control-lg" type="file" name="image" />
                        <img src="/<%= post.image %>" width="100" class="img-thumbnail mt-1">
                    </div>
                    <input type="hidden" name="old_image" value="<%= post.image %>"> 
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Update Post" class="btn btn-success btn-lg" />
                    </div>
                   </form>
               </div>
           </div>
       </div> 
    </div>
</div>

<%- include("./layout/footer") %>