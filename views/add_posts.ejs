<%- include("./layout/header") %>

<div class="container">
    <div class="row">
       <div class="col-lg-6 mx-auto mt-4">
           <div class="card shadow">
               <div class="card-header bg-primary">
                   <h3 class="text-light">Add New Post</h3>
               </div>
               <div class="card-body p-4">
                   <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                       <div class="mb-3">
                           <label for="PostTopic">Post Topic</label>
                           <input type="text" name="PostTopic" class="form-control form-control-lg" placeholder="Enter Post Topic" required />
                       </div>
                       <div class="mb-3">
                        <label for="Postdescription">Post Description</label>
                        <input type="text" name="Postdescription" class="form-control form-control-lg" placeholder="Enter Post Description" required />
                    </div>                    
                    <div class="mb-3">
                        <label for="image" class="form-label">Select Image</label>
                        <input class="form-control form-control-lg" type="file" name="image" required/>
                    </div>
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Add Post" class="btn btn-primary btn-lg" />
                    </div>
                   </form>
               </div>
           </div>
       </div> 
    </div>
</div>

<%- include("./layout/footer") %>